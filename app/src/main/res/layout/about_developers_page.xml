<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/about_About.wrapper"
    >

    <LinearLayout style="@style/about_About.wrapper">

        <LinearLayout style="@style/about_sub_wrapper"
            android:background="@color/about_github_col">

            <ImageView
                android:layout_height="@dimen/about_icon_size"
                android:layout_width="@dimen/about_icon_size"
                android:id="@+id/image"
                style="@style/about_image"


                />

            <TextView
                android:id="@+id/description"
                style="@style/about_description"
                android:textColor="@color/cardview_light_background"/>
        </LinearLayout>

        <View style="@style/about_separator" />

        <LinearLayout
            android:background="@color/about_github_col"
            android:id="@+id/about_providers"
            style="@style/about_sub_wrapper"
            android:padding="0dp">

        </LinearLayout>
    </LinearLayout>
</ScrollView>