<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/mTool_setting"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        android:background="#061055"
        app:popupTheme="@style/Theme.Design.NoActionBar"
        app:theme="@style/Theme.Design.NoActionBar"
        app:title="Settings"/>

    <TextView
        android:id="@+id/share_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:drawableLeft="@drawable/ic_share_app"
        android:drawablePadding="16dp"
        android:clickable="true"
        android:text="Share App"
        android:textStyle="bold" />

            <TextView
                android:id="@+id/about_us"

              android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/ic_info_setting"
                android:drawablePadding="16dp"
                android:layout_marginBottom="32dp"
                android:textStyle="bold"
                android:gravity="center"
                android:onClick="onClick"
                android:text="About Us"
                />

    <TextView
        android:id="@+id/about_app"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/aboutus"
        android:drawablePadding="16dp"
        android:layout_marginBottom="32dp"
        android:textStyle="bold"
        android:gravity="center"
        android:onClick="onClick"
        android:text="About App"
        />

            <TextView
                android:id="@+id/rate_app"
               android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="32dp"
                android:drawableLeft="@drawable/ic_rate_review"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:onClick="onClick"
                android:textStyle="bold"
                android:text="Rate the App on Google Play Store"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_version"
            android:drawablePadding="16dp"
            android:layout_marginBottom="32dp"
            android:textStyle="bold"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Version 1.0.1 beta"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Copyright 2019.07"

               />



</LinearLayout>